-- This is a SQLite database file with sample detection data
-- Created for testing the cross-validation system

-- Create tasks table
CREATE TABLE IF NOT EXISTS tasks (
    id INTEGER PRIMARY KEY,
    name TEXT,
    start_date TEXT,
    end_date TEXT,
    duration TEXT,
    status TEXT
);

-- Create resources table
CREATE TABLE IF NOT EXISTS resources (
    id INTEGER PRIMARY KEY,
    name TEXT,
    type TEXT,
    cost REAL,
    work TEXT
);

-- Create assignments table
CREATE TABLE IF NOT EXISTS assignments (
    task_id INTEGER,
    resource_id INTEGER,
    units TEXT,
    work TEXT,
    cost REAL,
    PRIMARY KEY (task_id, resource_id)
);

